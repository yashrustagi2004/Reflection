# Environment Configuration for Microservices Architecture
# Copy this file to .env and fill in your values

# ==================== Flask Configuration ====================
FLASK_SECRET_KEY=your-secret-key-change-this-in-production
FLASK_DEBUG=False

# ==================== JWT Configuration ====================
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# ==================== MongoDB Configuration ====================
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=Reflection

# ==================== OAuth Configuration ====================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/callback?provider=google

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:5000/auth/callback?provider=github

# ==================== AI/ML Configuration ====================
# Google Gemini API
GOOGLE_API_KEY=your-google-gemini-api-key

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=interview-prep-assistant

# ==================== Service URLs ====================
FRONTEND_PORT=5000
LOGIN_MANAGEMENT_PORT=5001
LOGIN_MANAGEMENT_URL=http://localhost:5001

FILE_PARSING_PORT=5002
FILE_PARSING_URL=http://localhost:5002

QA_GENERATION_PORT=5003
QA_GENERATION_URL=http://localhost:5003

ANSWER_ANALYSIS_PORT=5004
ANSWER_ANALYSIS_URL=http://localhost:5004

RESOURCES_PORT=5005
RESOURCES_URL=http://localhost:5005

# ==================== File Upload Configuration ====================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE_MB=10

# ==================== CORS Configuration ====================
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000
